{
    "name": "@mariozechner/lsp-cli",
    "version": "0.1.1",
    "description": "CLI tool to extract types from codebases using LSP servers",
    "main": "dist/lib.js",
    "types": "dist/lib.d.ts",
    "bin": {
        "lsp-cli": "dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/lib.d.ts",
            "import": "./dist/lib.js",
            "require": "./dist/lib.js"
        },
        "./cli": {
            "types": "./dist/index.d.ts",
            "import": "./dist/cli.js",
            "require": "./dist/cli.js"
        }
    },
    "files": [
        "dist/**/*.js",
        "dist/**/*.d.ts",
        "dist/**/*.js.map",
        "dist/**/*.d.ts.map",
        "dist/llms.md"
    ],
    "scripts": {
        "start": "tsx src/index.ts",
        "build": "rm -rf dist && mkdir -p dist && tsc && esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/cli.js --sourcemap --banner:js='#!/usr/bin/env node' && chmod +x dist/cli.js && cp llms.md dist/",
        "typecheck": "tsc --noEmit",
        "lint": "biome check --write . --error-on-warnings",
        "format": "biome format --write .",
        "check": "npm run lint && npm run format && npm run typecheck",
        "prepublishOnly": "npm run build",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepare": "husky"
    },
    "dependencies": {
        "chalk": "^5.4.1",
        "commander": "^11.0.0",
        "node-stream-zip": "^1.15.0",
        "tar": "^6.2.0",
        "vscode-jsonrpc": "^8.2.0",
        "vscode-languageserver-protocol": "^3.17.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.0.6",
        "@types/node": "^20.0.0",
        "@types/tar": "^6.1.0",
        "esbuild": "^0.25.5",
        "husky": "^9.1.7",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0",
        "vitest": "^3.2.4"
    }
}
